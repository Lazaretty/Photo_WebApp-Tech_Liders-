@model User

<div class="text-center">
    <h2>Регистрация</h2>
    <form asp-action="Register" asp-controller="Login" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Email">Введите Email</label><br />
                <input type="text" asp-for="Email" class="form-control" placeholder="email@example.com" />
                <span asp-validation-for="Email" />
            </div>
            <div>
                <label asp-for="Password">Введите пароль</label><br />
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <label asp-for="Nickname">Введите ФИО</label><br />
                <input type="text" asp-for="Nickname" class="form-control" placeholder="Nickname" />
            </div>
           
            <div>
                <p></p>
                <input type="submit" value="Регистрация" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>